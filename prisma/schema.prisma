generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id                    String             @id @default(cuid())
  phone                 String?            @unique
  email                 String?            @unique
  username              String?            @unique
  name                  String
  password              String?
  bio                   String?
  avatar_url            String?
  gender                UserGender
  date_of_birth         DateTime?
  role                  UserRole           @default(player)
  status                UserStatus         @default(active)
  createdAt             DateTime           @default(now())
  updatedAt             DateTime?          @updatedAt
  // Relation
  Match                 Match[]
  MatchJoin             MatchJoin[]
  receivedNotifications Notification[]     @relation("ReceivedNotifications")
  Message               Message[]
  GroupMessageJoin      GroupMessageJoin[]
  Stadium               Stadium[]
  VoucherUser           VoucherUser[]
  Transaction           Transaction[]
  Notification          Notification[]
  Blog                  Blog[]
  BlogComment           BlogComment[]
  StadiumRating         StadiumRating[]
  BlogReact             BlogReact[]

  @@map("users")
}

enum UserStatus {
  active
  inactive
}

enum UserRole {
  player
  admin
  coach
  stadium
  staff
}

enum UserGender {
  men
  women
  other
}

// Sport
model Sport {
  id         Int     @id @default(autoincrement())
  sport_name String  @unique
  slug       String?
  icon       String?
  // Relation
  Match      Match[]
  Blog       Blog[]

  @@map("sports")
}

// Match
model Match {
  match_id       String      @id @default(cuid())
  match_name     String
  user_create_id String
  description    String?
  cid            String
  sport_id       Int
  budget         Float?
  maximum_join   Int         @default(20)
  slug           String?
  start_time     DateTime
  end_time       DateTime
  status         MatchStatus @default(upcomming)
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
  // Relation
  user_create    User        @relation(fields: [user_create_id], references: [id])
  sport          Sport       @relation(fields: [sport_id], references: [id])
  match_join     MatchJoin[]

  @@map("matches")
}

model MatchJoin {
  id           Int             @id @default(autoincrement())
  user_join_id String
  match_id     String
  join_at      DateTime        @default(now())
  status       MatchJoinStatus @default(pending)
  // Relation
  match        Match           @relation(fields: [match_id], references: [match_id])
  user_join    User            @relation(fields: [user_join_id], references: [id])

  @@map("match_joins")
}

enum MatchStatus {
  completed
  upcomming
  cancelled
}

enum MatchJoinStatus {
  pending
  accepted
  rejected
}

// Notification
model Notification {
  notification_id String   @id @default(cuid())
  receiver_id     String
  content         String
  created_at      DateTime @default(now())
  is_read         Boolean  @default(false)

  // Relation
  receiver User    @relation("ReceivedNotifications", fields: [receiver_id], references: [id])
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?

  @@map("notifications")
}

model GroupMessage {
  group_message_id       String             @id @default(cuid())
  group_message_name     String
  group_message_thumnail String?
  slug                   String?
  created_at             DateTime           @default(now())
  expired_at             DateTime?
  last_active_time       DateTime?          @default(now())
  // Relation
  type                   GroupMessageType
  GroupMessageJoin       GroupMessageJoin[]
  Message                Message[]

  @@map("group_messages")
}

enum GroupMessageType {
  single
  match
  club
}

model Message {
  message_id       String       @id @default(cuid())
  message_to       String
  message_from     String
  content          String
  created_at       DateTime     @default(now())
  // Relation
  user_from        User         @relation(fields: [message_from], references: [id])
  group_message_to GroupMessage @relation(fields: [message_to], references: [group_message_id])

  @@map("messages")
}

model GroupMessageJoin {
  id               String       @id @default(cuid())
  group_message_id String
  user_join_id     String
  created_at       DateTime     @default(now())
  // Relation
  group_message    GroupMessage @relation(fields: [group_message_id], references: [group_message_id])
  user_join        User         @relation(fields: [user_join_id], references: [id])

  @@map("group_message_joins")
}

// Stadium
model Stadium {
  id                  String          @id @default(cuid())
  stadium_owner_id    String
  stadium_name        String
  stadium_lat         Float
  stadium_long        Float
  stadium_address     String
  stadium_thumnail    String?
  stadium_time        String?
  stadium_rating      Float           @default(0)
  stadium_description String
  stadium_status      StadiumStatus   @default(approved)
  created_at          DateTime        @default(now())
  // Relation
  owner               User            @relation(fields: [stadium_owner_id], references: [id])
  ratings             StadiumRating[]

  @@map("stadiums")
}

model StadiumRating {
  id         String   @id @default(cuid())
  stadium_id String
  user_id    String
  rating     Float
  comment    String   @default("no comment")
  created_at DateTime @default(now())
  // Relation
  stadium    Stadium  @relation(fields: [stadium_id], references: [id])
  user       User     @relation(fields: [user_id], references: [id])
}

enum StadiumStatus {
  pending
  approved
  rejected
  banned
  deleted
  mantainance
}

enum YardStatus {
  booked
  avaiable
  mantainance
  deleted
}

enum BookingStatus {
  pending
  accepted
  rejected
  cancelled
  completed
}

model Voucher {
  id           String        @id @default(cuid())
  voucher_name String
  voucher_code String        @unique
  value        Float
  created_at   DateTime      @default(now())
  expired_at   DateTime
  VoucherUser  VoucherUser[]
}

model VoucherUser {
  id         String        @id @default(cuid())
  user_id    String
  voucher_id String
  created_at DateTime      @default(now())
  status     VoucherStatus @default(active)
  // Relation
  user       User          @relation(fields: [user_id], references: [id])
  voucher    Voucher       @relation(fields: [voucher_id], references: [id])
}

enum VoucherStatus {
  active
  expired
  used
}

// Transaction

model Transaction {
  id               String            @id @default(cuid())
  user_id          String
  transaction_code String?           @unique
  amount           Float
  bank_account     String?
  bank_name        String?
  bank_short_name  String?
  bank_logo        String?
  rejected_reason  String?
  type             TransactionType
  method           TransactionMethod
  status           TransactionStatus @default(pending)
  created_at       DateTime          @default(now())
  expired_at       DateTime?
  // Relation
  user             User              @relation(fields: [user_id], references: [id])
}

enum TransactionType {
  deposit
  withdraw
  booking
  premium
}

enum TransactionMethod {
  momo
  bank
  wallet
}

enum TransactionStatus {
  pending
  completed
  rejected
  cancelled
}

// Blog

model Blog {
  id           String        @id @default(cuid())
  blog_owner   String
  blog_content String
  blog_address String?
  blog_sport   String?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  status       BlogStatus?   @default(approved)
  // Relation
  owner        User          @relation(fields: [blog_owner], references: [id])
  blog_link    BlogLink[]
  BlogComment  BlogComment[]
  BlogReact    BlogReact[]
  Sport        Sport?        @relation(fields: [sportId], references: [id])
  sportId      Int?

  @@map("blogs")
}

enum BlogStatus {
  approved
  deleted
}

model BlogLink {
  id      String       @id @default(cuid())
  blog_id String
  url     String
  type    BlogLinkType
  // Relation
  Blog    Blog?        @relation(fields: [blog_id], references: [id])

  @@map("blog_links")
}

enum BlogLinkType {
  image
  video
}

model BlogComment {
  id             String   @id @default(cuid())
  user_id        String
  blog_id        String
  parent_comment String   @default("")
  content        String
  created_at     DateTime @default(now())
  // Relation
  user           User     @relation(fields: [user_id], references: [id])
  blog           Blog     @relation(fields: [blog_id], references: [id])

  @@map("blog_comments")
}

model BlogReact {
  id         String        @id @default(cuid())
  blog_id    String
  user_id    String
  react_type BlogReactType
  // Relation
  blog       Blog          @relation(fields: [blog_id], references: [id])
  user       User          @relation(fields: [user_id], references: [id])

  @@map("blog_reacts")
}

enum BlogReactType {
  like
}
